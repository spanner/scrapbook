%html{:lang => 'en'}
  %head
    %title
      = t(:scrapbook)
      - if content_for?(:pagetitle)
        ‚úÅ
        = content_for(:pagetitle)

    = stylesheet_link_tag "http://fast.fonts.com/cssapi/39788b9e-bfde-4f08-a9c5-5b2c08e0c676.css"
